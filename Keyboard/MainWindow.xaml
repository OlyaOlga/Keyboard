<Window x:Class="Keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" TextInput="user_prints_sth" >
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Training">
                    <MenuItem Header="_Start"  />
                    <MenuItem Header="_Statistics" />
                    <Separator />
                    <MenuItem x:Name="Settings" Header="_Settings" Click="Settings_OnClick"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBlock x:Name="InputText" Grid.ColumnSpan="5" HorizontalAlignment="Left" Margin="35,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="456" Height="28"/>
        <TextBlock x:Name="countKeyPressed" Text="" Grid.Column="2" HorizontalAlignment="Left" Margin="0,251,0,0" VerticalAlignment="Top" Width="321" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="dataBlock" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="24" Margin="10,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497"/>

    </Grid>
</Window>
