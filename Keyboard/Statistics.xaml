<Window x:Class="Keyboard.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard"
        mc:Ignorable="d"
        Title="Statistics" Height="Auto" Width="Auto" d:DesignWidth="542.737" d:DesignHeight="380.132">
    <Grid Margin="8,0,0,8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="{Binding CurrentStatisticsIdentifier}"></Label>
        <Label Grid.Row="1" Content="{Binding CurrentErrorStatistics.Result.Correct}"></Label>
        <ProgressBar Grid.Row="2" Minimum="0" Maximum="100" Value="{Binding CurrentErrorStatistics.Result.Correct}"/>


        <ListView Grid.Row="3" ItemsSource="{Binding StatisticsList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="400">
                        <TextBlock Text="{Binding Key}" />
                        <TextBlock Text="{Binding Value.Result.Correct}" FontWeight="Bold" />
                        <ProgressBar  Minimum="0" Maximum="100" Value="{Binding Value.Result.Correct}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
